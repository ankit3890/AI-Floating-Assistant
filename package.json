{
  "name": "ai_pin",
  "version": "1.0.5",
  "description": "Floating AI Assistant",
  "repository": {
    "type": "git",
    "url": "https://github.com/ankit3890/AI-Floating-Assistant.git"
  },
  "main": "app/main/main.js",
  "scripts": {
    "start": "electron . --no-sandbox --disable-gpu --disable-gpu-compositing --disable-features=VaapiVideoDecoder --use-gl=swiftshader",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "validate-release": "node scripts/validate-release.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "build": {
    "appId": "com.aipin.desktop",
    "productName": "AI Floating Assistant",
    "win": {
      "target": "nsis",
      "icon": "assets/icons/logo.ico",
      "artifactName": "AI-Floating-Assistant-Setup-${version}.${ext}"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "ankit3890",
        "repo": "AI-Floating-Assistant",
        "releaseType": "release"
      }
    ],
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "include": "build/installer.nsh"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "assets/icons/logo.icns",
      "category": "public.app-category.productivity"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "assets/icons/icon.png",
      "category": "Utility"
    },
    "dmg": {
      "title": "AI Floating Assistant Installer",
      "icon": "assets/icons/logo.icns"
    },
    "protocols": [
      {
        "name": "AI Floating Assistant",
        "schemes": [
          "aifloatingassistant"
        ]
      }
    ]
  },
  "keywords": [],
  "author": "Ankit <ankit3890@users.noreply.github.com>",
  "license": "ISC",
  "devDependencies": {
    "@electron/rebuild": "^3.7.2",
    "electron": "^27.3.11",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.6.2",
    "ws": "^8.18.3"
  }
}