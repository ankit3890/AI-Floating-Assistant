{
  "name": "ai_pin",
  "version": "1.0.4",
  "description": "Floating AI Assistant",
  "repository": {
    "type": "git",
    "url": "https://github.com/ankit3890/AI-Floating-Assistant.git"
  },
  "main": "app/main/main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "build": {
    "appId": "com.aipin.desktop",
    "productName": "AI Floating Assistant",
    "win": {
      "target": "nsis",
      "icon": "assets/icons/logo.ico",
      "artifactName": "AI-Floating-Assistant-Setup-${version}.${ext}",
      "publish": [
        {
          "provider": "github",
          "owner": "ankit3890",
          "repo": "AI-Floating-Assistant"
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "include": "build/installer.nsh"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "assets/icons/logo.icns",
      "category": "public.app-category.productivity"
    },
    "dmg": {
      "title": "AI Floating Assistant Installer",
      "icon": "assets/icons/logo.icns"
    },
    "protocols": [
      {
        "name": "AI Floating Assistant",
        "schemes": [
          "aifloatingassistant"
        ]
      }
    ]
  },
  "keywords": [],
  "author": "Ankit",
  "license": "ISC",
  "devDependencies": {
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "electron-log": "^5.4.3",
    "electron-store": "^11.0.2",
    "electron-updater": "^6.6.2",
    "ws": "^8.18.3"
  }
}
